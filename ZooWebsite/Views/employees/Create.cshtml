@model ZooWebsite.Models.employees

@{
    ViewData["Title"] = "Create";
}

<style>
    div.container {
        background-color: #EEEEEE;
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 1px;
    }

    input::placeholder {
        font: 15px sans-serif;
        font-style: italic;
    }

    .newhabitat {
        position: absolute;
        left: 730px;
        top: 535px;
    }

</style>

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="first_name" class="control-label">First Name</label>
                <input asp-for="first_name" class="form-control" placeholder="*Required field*" />
                <span asp-validation-for="first_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="middle_name" class="control-label">Middle Name</label>
                <input asp-for="middle_name" class="form-control"  />
                <span asp-validation-for="middle_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="last_name" class="control-label">Last Name</label>
                <input asp-for="last_name" class="form-control" placeholder="*Required field*" />
                <span asp-validation-for="last_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birth_date" class="control-label">Birth Date</label>
                <input asp-for="birth_date" class="form-control" placeholder="*Required field*" />
                <span asp-validation-for="birth_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="sex" class="control-label">Sex</label>
                    <select asp-for="sex" asp-items="(List<SelectListItem>)ViewBag.genderitems" class="form-control"></select>
                    <span asp-validation-for="sex" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="address_1" class="control-label">Address</label>
                <input asp-for="address_1" asp-items="(List<SelectListItem>)ViewBag.habitatitems" class="form-control" placeholder="*Required field*" />
                <span asp-validation-for="address_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label">City</label>
                <input asp-for="city" class="form-control"  />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="state" class="control-label">State</label>
                <select asp-for="state" asp-items="(List<SelectListItem>)ViewBag.genderitems" class="form-control"></select>
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="zip" class="control-label">Zip</label>
                <input asp-for="zip" class="form-control" placeholder="*Required field*" />
                <span asp-validation-for="zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label">Phone</label>
                <input asp-for="phone" class="form-control"  />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" placeholder="*Required field*" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="job" class="control-label">Job</label>
                <select asp-for="sex" asp-items="(List<SelectListItem>)ViewBag.genderitems" class="form-control"></select>
                <span asp-validation-for="job" class="text-danger"></span>
            </div>




            <hr>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
 
    </div>
</div>

 <hr>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

