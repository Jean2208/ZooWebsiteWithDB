@model List<Items>
@{
    ViewData["Title"] = "Tickets";
}

<head>
    <style>
        body {
            background-image: url(https://cdn.shopify.com/s/files/1/0536/6133/5723/products/EBF3CB_600x.png?v=1611602358),url(https://patch.com/img/cdn20/shutterstock/25866962/20220512/113433/styles/patch_image/public/shutterstock-1857369271-1___12113357732.jpg?width=1200);
            background-repeat: no-repeat, no-repeat;
            background-size: 60% 100%;
            background-position: left top, right top;
        }
    </style>

</head>
<body>

    <h1 style="font-family:Helvetica;  font-size:60px; text-align: left; color: black" ;>Buy Tickets</h1>
    <h1>Enter Quantity of Tickets</h1>


</body>


<div class="form">

    <form asp-controller="Home" asp-action="Tickets" method="post">
        <table td>
            <tr>
                <td>All Day Pass :</td>
                <td><input name="txtFName" type="text" /></td>
            </tr>
            <tr>
                <td colspan="3"><input id="Submit1" type="submit" value="Add to Cart" /></td>
            </tr>
            <tr>
                <td>Senior Day Pass :</td>
                <td><input name="txtMName" type="text" /></td>
            </tr>

            <tr>
                <td colspan="3"><input id="Submit1" type="submit" value="Add to Cart" /></td>
            </tr>
        </table>
    </form>
    <br />
    <br />

    <h2 style="font-style:italic; color:deeppink">@ViewBag.Result</h2>

</div>


<table class="styled-table">
    <thread>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>In Stock</th>

        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.instock</td>
            </tr>
        }
    </tbody>

</table>

<style>
    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
