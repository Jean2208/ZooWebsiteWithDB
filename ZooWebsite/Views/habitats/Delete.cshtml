@model ZooWebsite.Models.habitats

@{
    ViewData["Title"] = "Delete";
}

<style>
    div.container {
        background-color: #EEEEEE;
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 1px;
    }
</style>


<h1>Delete</h1>



<h3>Are you sure you want to delete this Habitat?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Habitat Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.habitat_name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            Habitat Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class="col-sm-2">
            Daily Maintenance Costs
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.daily_maintenance_costs)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
