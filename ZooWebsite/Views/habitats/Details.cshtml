@model ZooWebsite.Models.habitats

@{
    ViewData["Title"] = "Details";
}

<style>
    div.container {
        background-color: #EEEEEE;
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 1px;
    }
</style>


<h1>Details</h1>
<h4>Habitat</h4>



<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Habitat Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.habitat_name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            Habitat Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class="col-sm-2">
            Daily Maintenance Costs
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.daily_maintenance_costs)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>