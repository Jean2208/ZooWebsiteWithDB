@using System.Globalization
@model IEnumerable<ZooWebsite.Models.ViewModels.AnimalsViewModel>

@{
    ViewData["Title"] = "Index";
}


  


<h1>Animals</h1>


<br>



<div class="form-group">
    <input type="button" value="Create New Animal" class="btn btn-primary" onclick=" location.href='@Url.Action("Create")' " />
</div>

@if (TempData["ErrorMessage"] != null)
{

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <div class="alert alert-danger" id="alertDiv" role="alert" style={{ fontSize: 20 }}>
        <button onclick="document.getElementById('alertDiv').style.opacity = '0'" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Error! </strong> Too many animals in the habitat of your choice. Choose a different one or try creating a new habitat for your animal.
    </div>
}

<br>


<!-- CSS Code: Place this code in the document's head (between the <head> -- </head> tags) -->

<style>

    #alertDiv {
        transition: opacity 1s;
    }

  

    div.container{
        margin-left:210px;
    }

    div.container-fluid{
        padding:0;
    }
    
    table {
     
      background-color: #FFFFFF;
      border-collapse: collapse;
      border-width: 1px;
      border-color: #EDEDED;
      border-style: solid;
      color: #000000;
      font-family: 'Source Sans Pro', sans-serif;
      border-spacing: 10px;
       
    }

    .wraplines{
        white-space: nowrap;
    }

    .wraptwolines { 
        
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        
    }

     td{
      
      border-color: #EDEDED;
      border-style: solid;
      padding: 15px;
       
    }

     th, thead {
        background-color: black;
        color:white;  
        padding: 15px;
    }

    

       tr:nth-child(even) {
        background-color: #EEEEEE;
    }


</style>

   


<!-- HTML Code: Place this code in the document's body (between the <body> tags) where the table should appear -->
<div class="container-fluid">
<table>
    <thead>
        <tr style="white-space:nowrap">
            <th>NAME</th>
            <th>SCIENTIFIC NAME</th>
            <th class="wraptwolines">DESCRIPTION</th>
            <th>SEX</th>
            <th>AGE</th>
            <th>HABITAT</th>
            <th>MEAL TIME</th>
            <th>MEAL TYPE</th>
            <th>PLACE OF ORIGIN</th>
            <th>HEALTH STATUS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model) {
        <tr>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.animal_name)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.scientific_name)</td>
                    <td class="wraptwolines">@Html.DisplayFor(modelItem => item.description)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.sex)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.age)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.habitat_name)</td>
                    <td class="wraplines"> @Html.DisplayFor(modelItem => item.meal_time)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.meal_type)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.place_of_origin)</td>
                    <td class="wraplines">@Html.DisplayFor(modelItem => item.health_records)</td>

            <td class="wraplines"> 
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>

        </tr>
        }     
    </tbody>
</table>
</div>
