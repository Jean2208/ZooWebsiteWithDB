@model ZooWebsite.Models.ViewModels.AnimalsViewModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    div.container {
        background-color: #EEEEEE;
        border-radius: 10px;
        border-color: black;
        border-style: solid;
        border-width: 1px;
    }

    img {
        width: 50%;
        height: 100%;
    }
</style>

<h1>Delete</h1>


<h3>Are you sure you want to delete this animal?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.animal_name)
        </dd>
        <dt class="col-sm-2">
            Scientific Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.scientific_name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            Sex
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sex)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.age)
        </dd>
        <dt class="col-sm-2">
            Habitat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.habitat_name)
        </dd>
        <dt class="col-sm-2">
            Meal Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.meal_time)
        </dd>
        <dt class="col-sm-2">
            Meal Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.meal_type)
        </dd>
        <dt class="col-sm-2">
            Place of Origin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.place_of_origin)
        </dd>
        <dt class="col-sm-2">
            Health Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.health_records)
        </dd>
        <dd class="col-sm-10">
            <img src="@Model.image_path" alt="@Model.animal_name" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
